{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "interactive": true,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false,
      "env": ["API_BASE_URL", "UI_BASE_URL", "CI"]
    }
  }
}
