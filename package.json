{
  "name": "magnet",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "dev:admin": "node scripts/dev-admin.js",
    "dev:docs": "turbo run dev --filter=@magnet/docs",
    "test:e2e": "turbo run test --filter=@magnet/e2e",
    "prepare": "husky",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.4.4",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.2",
  "workspaces": [
    "apps/*",
    "apps/examples/**/*",
    "packages/**/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "biome check --write"
    ]
  }
}
