{
  "name": "@magnet-cms/utils",
  "version": "0.1.0",
  "description": "Utility functions for Magnet CMS",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./text": {
      "import": "./dist/text.js",
      "require": "./dist/text.cjs"
    },
    "./date": {
      "import": "./dist/date.js",
      "require": "./dist/date.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:dev": "tsup --watch",
    "build": "tsup"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.12",
    "@repo/biome": "workspace:*",
    "@repo/tsup": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "reflect-metadata": "0.2.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.1.12",
    "reflect-metadata": "0.2.2"
  }
}